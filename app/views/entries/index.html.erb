<h1><%= "#{Entry.model_name.human}一覧" %></h1>

<%= link_to t('view.form.new'), new_entry_path %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th><%= Entry.human_attribute_name :name %></th>
      <th><%= Entry.human_attribute_name :email %></th>
      <th><%= Entry.human_attribute_name :mobile_number %></th>
      <th><%= Entry.human_attribute_name :verified %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.name %></td>
        <td><%= entry.email %></td>
        <td><%= entry.mobile_number %></td>
        <td><%= entry.verified %></td>
        <td><%= link_to t('view.form.show'), entry %></td>
        <td><%= link_to t('view.form.edit'), edit_entry_path(entry) %></td>
        <td><%= link_to t('view.form.destroy'), entry, method: :delete, data: { confirm: t('view.form.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
